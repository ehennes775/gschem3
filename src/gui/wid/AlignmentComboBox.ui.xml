<?xml version="1.0" encoding="UTF-8" ?>
<interface>

    <object class="GtkListStore" id="alignment-list">
        <columns>
            <column type="gchararray"/>
            <column type="Geda3TextAlignment"/>
        </columns>
        <data>
            <row>
                <col id="0">Upper Left</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_UPPER_LEFT</col>
            </row>
            <row>
                <col id="0">Upper Middle</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_UPPER_MIDDLE</col>
            </row>
            <row>
                <col id="0">Upper Right</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_UPPER_RIGHT</col>
            </row>
            <row>
                <col id="0">Middle Left</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_MIDDLE_LEFT</col>
            </row>
            <row>
                <col id="0">Middle Middle</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_MIDDLE_MIDDLE</col>
            </row>
            <row>
                <col id="0">Middle Right</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_MIDDLE_RIGHT</col>
            </row>
            <row>
                <col id="0">Lower Left</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_LOWER_LEFT</col>
            </row>
            <row>
                <col id="0">Lower Middle</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_LOWER_MIDDLE</col>
            </row>
            <row>
                <col id="0">Lower Right</col>
                <col id="1">GEDA3_TEXT_ALIGNMENT_LOWER_RIGHT</col>
            </row>
        </data>
    </object>

    <template class="Gschem3AlignmentComboBox" parent="Gschem3PropertyComboBox">
        <child>
            <object class="GtkCellRendererText" id="alignment-renderer">
            </object>
            <attributes>
                <attribute name="text">0</attribute>
            </attributes>
            <cell-packing>
                <property name="expand">true</property>
            </cell-packing>
        </child>
    </template>

</interface>
