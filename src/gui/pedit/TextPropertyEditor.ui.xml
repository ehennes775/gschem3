<?xml version="1.0" encoding="UTF-8" ?>
<interface>

    <object class="GtkListStore" id="color-list">
        <columns>
            <column type="gchararray"/>
            <column type="gint"/>
        </columns>
        <data>
            <row>
                <col id="0">Solid</col>
                <col id="1">0</col>
            </row>
            <row>
                <col id="0">Dotted</col>
                <col id="1">1</col>
            </row>
            <row>
                <col id="0">Dashed</col>
                <col id="1">2</col>
            </row>
            <row>
                <col id="0">Center</col>
                <col id="1">3</col>
            </row>
            <row>
                <col id="0">Phantom</col>
                <col id="1">4</col>
            </row>
        </data>
    </object>

    <object class="GtkListStore" id="line-width-list">
        <columns>
            <column type="gchararray"/>
        </columns>
        <data>
            <row>
                <col id="0">5</col>
            </row>
            <row>
                <col id="0">10</col>
            </row>
            <row>
                <col id="0">15</col>
            </row>
            <row>
                <col id="0">20</col>
            </row>
        </data>
    </object>

    <object class="GtkListStore" id="alignment-list">
        <columns>
            <column type="gchararray"/>
        </columns>
        <data>
            <row>
                <col id="0">50</col>
            </row>
            <row>
                <col id="0">75</col>
            </row>
            <row>
                <col id="0">100</col>
            </row>
            <row>
                <col id="0">125</col>
            </row>
            <row>
                <col id="0">150</col>
            </row>
        </data>
    </object>

    <object class="GtkListStore" id="rotation-list">
        <columns>
            <column type="gchararray"/>
            <column type="gint"/>
        </columns>
        <data>
            <row>
                <col id="0">0</col>
                <col id="1">0</col>
            </row>
            <row>
                <col id="0">90</col>
                <col id="1">90</col>
            </row>
            <row>
                <col id="0">180</col>
                <col id="1">180</col>
            </row>
            <row>
                <col id="0">270</col>
                <col id="1">270</col>
            </row>
        </data>
    </object>

    <template class="Gschem3TextPropertyEditor" parent="GtkExpander">
        <property name="expanded">true</property>
        <property name="label">Text Properties</property>
        <child>
            <object class="GtkGrid" id="grid">
                <property name="column-spacing">10</property>
                <property name="margin-start">10</property>
                <property name="row-homogeneous">true</property>
                <property name="row-spacing">5</property>
                <child>
                    <object class="GtkLabel" id="color-label">
                        <property name="label">Color:</property>
                        <property name="xalign">0.0</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="Gschem3PropertyComboBox" id="color-combo">
                        <property name="hexpand">true</property>
                        <property name="model">color-list</property>
                        <child>
                            <object class="GtkCellRendererText" id="color-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">0</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkLabel" id="size-label">
                        <property name="label">Size:</property>
                        <property name="xalign">0.0</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">1</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="Gschem3PropertyComboBox" id="size-combo">
                        <property name="entry-text-column">0</property>
                        <property name="has-entry">true</property>
                        <property name="hexpand">true</property>
                        <property name="model">size-list</property>
                        <child internal-child="entry">
                            <object class="GtkEntry" id="size-entry">
                            </object>
                        </child>
                        <!-- The entry-text-column seems to provide this functionality
                        <child>
                            <object class="GtkCellRendererText" id="line-width-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                        -->
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">1</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkLabel" id="alignment-label">
                        <property name="label">Alignment:</property>
                        <property name="xalign">0.0</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">2</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="Gschem3PropertyComboBox" id="alignment-combo">
                        <property name="hexpand">true</property>
                        <property name="model">alignment-list</property>
                        <child>
                            <object class="GtkCellRendererText" id="alignment-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">2</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkLabel" id="rotation-label">
                        <property name="label">Rotation:</property>
                        <property name="xalign">0.0</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">3</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="Gschem3PropertyComboBox" id="rotation-combo">
                        <property name="hexpand">true</property>
                        <property name="model">rotation-list</property>
                        <child>
                            <object class="GtkCellRendererText" id="rotation-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">3</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
            </object>
        </child>
    </template>
</interface>
