<?xml version="1.0" encoding="UTF-8" ?>
<interface>

    <object class="GtkListStore" id="pin-type-list">
        <columns>
            <column type="gchararray"/>
            <column type="gchararray"/>
        </columns>
        <data>
            <row>
                <col id="0">Background</col>
                <col id="1">0</col>
            </row>
            <row>
                <col id="0">Pin</col>
                <col id="1">1</col>
            </row>
            <row>
                <col id="0">Unknown</col>
                <col id="1">2</col>
            </row>
            <row>
                <col id="0">Graphic</col>
                <col id="1">3</col>
            </row>
            <row>
                <col id="0">Net</col>
                <col id="1">4</col>
            </row>
            <row>
                <col id="0">Attribute</col>
                <col id="1">5</col>
            </row>
            <row>
                <col id="0">Logic Bubble</col>
                <col id="1">6</col>
            </row>
            <row>
                <col id="0">Unknown</col>
                <col id="1">7</col>
            </row>
            <row>
                <col id="0">Detached Attribute</col>
                <col id="1">8</col>
            </row>
            <row>
                <col id="0">Text</col>
                <col id="1">9</col>
            </row>
            <row>
                <col id="0">Bus</col>
                <col id="1">10</col>
            </row>
            <row>
                <col id="0">Select</col>
                <col id="1">11</col>
            </row>
            <row>
                <col id="0">Bounding Box</col>
                <col id="1">12</col>
            </row>
            <row>
                <col id="0">Zoom Box</col>
                <col id="1">13</col>
            </row>
            <row>
                <col id="0">Unknown</col>
                <col id="1">14</col>
            </row>
            <row>
                <col id="0">Unknown</col>
                <col id="1">15</col>
            </row>
        </data>
    </object>

    <template class="Gschem3ColorEditor" parent="GtkExpander">
        <property name="expanded">true</property>
        <property name="label">Pin Properties</property>
        <child>
            <object class="GtkGrid" id="grid">
                <property name="column-spacing">10</property>
                <property name="margin-start">10</property>
                <property name="row-homogeneous">true</property>
                <property name="row-spacing">5</property>
                <child>
                    <object class="GtkLabel" id="color-label">
                        <property name="label">Color:</property>
                        <property name="xalign">0.0</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="Gschem3PropertyComboBox" id="color-combo">
                        <property name="hexpand">true</property>
                        <property name="id-column">1</property>
                        <property name="model">pin-type-list</property>
                        <child>
                            <object class="Gschem3ColorSwatchRenderer" id="color-swatch-renderer">
                                <property name="width">25</property>
                            </object>
                            <!--
                            <attributes>
                                <attribute name="fill_type">2</attribute>
                            </attributes>
                            -->
                            <cell-packing>
                                <property name="expand">false</property>
                            </cell-packing>
                        </child>
                        <child>
                            <object class="GtkCellRendererText" id="color-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">0</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
            </object>
        </child>
    </template>
</interface>
