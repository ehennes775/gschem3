<?xml version="1.0" encoding="UTF-8" ?>
<interface>
    <template class="Gschem3ProjectWidget" parent="GtkBox">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <child>
            <object class="GtkTreeView" id="tree">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
            </object>
        </child>

        <child>
            <object class="GtkButtonBox" id="buttons">
                <property name="layout-style">GTK_BUTTONBOX_START</property>
                <property name="hexpand">true</property>
                <child>
                    <object class="GtkButton" id="button-add">
                        <property name="action-name">prj.add-files</property>
                        <property name="label">Add...</property>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="button-remove">
                        <property name="action-name">prj.remove-files</property>
                        <property name="label">Remove</property>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
