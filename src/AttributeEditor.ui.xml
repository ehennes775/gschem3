<?xml version="1.0" encoding="UTF-8" ?>
<interface>

    <object class="GtkListStore" id="list">
        <columns>
            <column type="gchararray"/>
            <column type="gchararray"/>
            <column type="gboolean"/>
            <column type="gboolean"/>
        </columns>
        <!-- test data for development -->
        <data>
            <row>
                <col id="0">pinnumber</col>
                <col id="1">7</col>
                <col id="2">true</col>
                <col id="3">true</col>
            </row>
            <row>
                <col id="0">pinlabel</col>
                <col id="1">RESET</col>
                <col id="2">true</col>
                <col id="3">true</col>
            </row>
        </data>
    </object>

    <template class="Gschem3AttributeEditor" parent="GtkBox">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <child>
            <object class="GtkScrolledWindow" id="tree-scrolled">
                <child>
                    <object class="GtkTreeView" id="tree">
                        <property name="hexpand">true</property>
                        <property name="model">list</property>
                        <property name="vexpand">true</property>
                        <child>
                            <object class="GtkTreeViewColumn" id="column-name">
                                <property name="clickable">TRUE</property>
                                <property name="resizable">TRUE</property>
                                <property name="sort-column-id">0</property>
                                <property name="title">Name</property>
                                <child>
                                    <object class="GtkCellRendererToggle" id="column-name-renderer-visible">
                                    </object>
                                    <attributes>
                                        <attribute name="active">2</attribute>
                                        <attribute name="editable">2</attribute>
                                    </attributes>
                                    <cell-packing>
                                        <property name="expand">false</property>
                                    </cell-packing>
                                </child>
                                <child>
                                    <object class="GtkCellRendererText" id="column-name-renderer-name">
                                    </object>
                                    <attributes>
                                        <attribute name="editable">2</attribute>
                                        <attribute name="text">0</attribute>
                                    </attributes>
                                    <cell-packing>
                                        <property name="expand">true</property>
                                    </cell-packing>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="GtkTreeViewColumn" id="column-value">
                                <property name="clickable">TRUE</property>
                                <property name="resizable">TRUE</property>
                                <property name="sort-column-id">1</property>
                                <property name="title">Value</property>
                                <child>
                                    <object class="GtkCellRendererToggle" id="column-value-renderer-visible">
                                    </object>
                                    <attributes>
                                        <attribute name="active">2</attribute>
                                        <attribute name="editable">2</attribute>
                                    </attributes>
                                    <cell-packing>
                                        <property name="expand">false</property>
                                    </cell-packing>
                                </child>
                                <child>
                                    <object class="GtkCellRendererText" id="column-value-renderer-value">
                                    </object>
                                    <attributes>
                                        <attribute name="editable">3</attribute>
                                        <attribute name="text">1</attribute>
                                    </attributes>
                                    <cell-packing>
                                        <property name="expand">true</property>
                                    </cell-packing>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="GtkTreeViewColumn" id="column-visible">
                                <property name="clickable">TRUE</property>
                                <property name="expand">FALSE</property>
                                <property name="resizable">FALSE</property>
                                <property name="sort-column-id">2</property>
                                <property name="title">Visible</property>
                                <child>
                                    <object class="GtkCellRendererToggle" id="column-visible-renderer-visible">
                                    </object>
                                    <attributes>
                                        <attribute name="active">2</attribute>
                                        <attribute name="editable">2</attribute>
                                    </attributes>
                                    <cell-packing>
                                        <property name="expand">false</property>
                                    </cell-packing>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
