<?xml version="1.0" encoding="UTF-8" ?>
<interface>

    <object class="GtkListStore" id="line-type-list">
        <columns>
            <column type="gchararray"/>
            <column type="gint"/>
        </columns>
        <data>
            <row>
                <col id="0">Solid</col>
                <col id="1">0</col>
            </row>
            <row>
                <col id="0">Dotted</col>
                <col id="1">1</col>
            </row>
            <row>
                <col id="0">Dashed</col>
                <col id="1">2</col>
            </row>
            <row>
                <col id="0">Center</col>
                <col id="1">3</col>
            </row>
            <row>
                <col id="0">Phantom</col>
                <col id="1">4</col>
            </row>
        </data>
    </object>

    <object class="GtkListStore" id="line-width-list">
        <columns>
            <column type="gchararray"/>
        </columns>
        <data>
            <row>
                <col id="0">5</col>
            </row>
            <row>
                <col id="0">10</col>
            </row>
            <row>
                <col id="0">15</col>
            </row>
            <row>
                <col id="0">20</col>
            </row>
        </data>
    </object>

    <object class="GtkListStore" id="dash-length-list">
        <columns>
            <column type="gchararray"/>
        </columns>
        <data>
            <row>
                <col id="0">50</col>
            </row>
            <row>
                <col id="0">75</col>
            </row>
            <row>
                <col id="0">100</col>
            </row>
            <row>
                <col id="0">125</col>
            </row>
            <row>
                <col id="0">150</col>
            </row>
        </data>
    </object>

    <object class="GtkListStore" id="cap-type-list">
        <columns>
            <column type="gchararray"/>
            <column type="gint"/>
        </columns>
        <data>
            <row>
                <col id="0">Butt</col>
                <col id="1">0</col>
            </row>
            <row>
                <col id="0">Square</col>
                <col id="1">1</col>
            </row>
            <row>
                <col id="0">Round</col>
                <col id="1">2</col>
            </row>
        </data>
    </object>

    <template class="Gschem3LineStyleEditor" parent="GtkExpander">
        <property name="expanded">true</property>
        <property name="label">Line Style</property>
        <child>
            <object class="GtkGrid" id="grid">
                <child>
                    <object class="GtkLabel" id="line-type-label">
                        <property name="label">Type:</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkComboBox" id="line-type-combo">
                        <property name="hexpand">true</property>
                        <property name="model">line-type-list</property>
                        <child>
                            <object class="GtkCellRendererText" id="line-type-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">0</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkLabel" id="width-label">
                        <property name="label">Width:</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">1</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkComboBox" id="width-combo">
                        <property name="entry-text-column">0</property>
                        <property name="has-entry">true</property>
                        <property name="hexpand">true</property>
                        <property name="model">line-width-list</property>
                        <child internal-child="entry">
                            <object class="GtkEntry" id="width-entry">
                            </object>
                        </child>
                        <!-- The entry-text-column seems to provide this functionality
                        <child>
                            <object class="GtkCellRendererText" id="line-width-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                        -->
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">1</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkLabel" id="dash-length-label">
                        <property name="label">Dash Length:</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">2</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkComboBox" id="dash-length-combo">
                        <property name="entry-text-column">0</property>
                        <property name="has-entry">true</property>
                        <property name="hexpand">true</property>
                        <property name="model">dash-length-list</property>
                        <child internal-child="entry">
                            <object class="GtkEntry" id="dash-length-entry">
                            </object>
                        </child>
                        <!-- The entry-text-column seems to provide this functionality
                        <child>
                            <object class="GtkCellRendererText" id="dash-length-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                        -->
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">2</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkLabel" id="dash-space-label">
                        <property name="label">Dash Space:</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">3</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkComboBox" id="dash-space-combo">
                        <property name="entry-text-column">0</property>
                        <property name="has-entry">true</property>
                        <property name="hexpand">true</property>
                        <property name="model">dash-length-list</property>
                        <child internal-child="entry">
                            <object class="GtkEntry" id="dash-space-entry">
                            </object>
                        </child>
                        <!-- The entry-text-column seems to provide this functionality
                        <child>
                            <object class="GtkCellRendererText" id="dash-space-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                        -->
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">3</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkLabel" id="cap-type-label">
                        <property name="label">Cap Type:</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">4</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkComboBox" id="cap-type-combo">
                        <property name="hexpand">true</property>
                        <property name="model">cap-type-list</property>
                        <child>
                            <object class="GtkCellRendererText" id="cap-type-renderer">
                            </object>
                            <attributes>
                                <attribute name="text">0</attribute>
                            </attributes>
                            <cell-packing>
                                <property name="expand">true</property>
                            </cell-packing>
                        </child>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">4</property>
                        <property name="width">1</property>
                        <property name="height">1</property>
                    </packing>
                </child>
            </object>
        </child>
    </template>
</interface>
