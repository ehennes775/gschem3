<?xml version="1.0" encoding="UTF-8" ?>
<interface>
    <object class="GtkImage" id="icon-tool-select">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-arc">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-box">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-circle">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-line">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-path">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-bus">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-net">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <object class="GtkImage" id="icon-tool-pin">
        <property name="resource">/com/github/ehennes775/gschem3/Schematic.svg</property>
    </object>
    <template class="Gschem3MainWindow" parent="GtkApplicationWindow">
        <child>
            <object class ="GtkBox" id="box">
                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                <child>
                    <object class="GtkToolbar" id="toolbar">
                        <child>
                            <object class="GtkToggleToolButton" id="tool-select">
                                <property name="label">Select</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'select'</property>
                                <property name="icon-widget">icon-tool-select</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-arc">
                                <property name="label">Arc</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'arc'</property>
                                <property name="icon-widget">icon-tool-arc</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-box">
                                <property name="label">Box</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'box'</property>
                                <property name="icon-widget">icon-tool-box</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-circle">
                                <property name="label">Circle</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'circle'</property>
                                <property name="icon-widget">icon-tool-circle</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-line">
                                <property name="label">Line</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'line'</property>
                                <property name="icon-widget">icon-tool-line</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-path">
                                <property name="label">Path</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'path'</property>
                                <property name="icon-widget">icon-tool-path</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-bus">
                                <property name="label">Bus</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'bus'</property>
                                <property name="icon-widget">icon-tool-bus</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-net">
                                <property name="label">Net</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'net'</property>
                                <property name="icon-widget">icon-tool-net</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkRadioToolButton" id="tool-pin">
                                <property name="label">Pin</property>
                                <property name="action-name">win.select-tool</property>
                                <property name="action-target">'pin'</property>
                                <property name="icon-widget">icon-tool-pin</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkToolButton" id="zoom-in">
                                <property name="icon-name">zoom-in</property>
                                <property name="action-name">win.zoom-in</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkToolButton" id="zoom-out">
                                <property name="icon-name">zoom-out</property>
                                <property name="action-name">win.zoom-out</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkToolButton" id="zoom-extents">
                                <property name="icon-name">zoom-fit-best</property>
                                <property name="action-name">win.zoom-extents</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkPaned" id="paned">
                        <property name="orientation">GTK_ORIENTATION_HORIZONTAL</property>
                        <child>
                            <object class="Gschem3ProjectWidget" id="project">
                                <property name="hexpand">true</property>
                                <property name="vexpand">true</property>
                            </object>
                            <packing>
                                <property name="resize">false</property>
                                <property name="shrink">false</property>
                            </packing>
                        </child>
                        <child>
                            <object class="GtkNotebook" id="notebook">
                                <property name="hexpand">true</property>
                                <property name="scrollable">true</property>
                                <property name="vexpand">true</property>
                            </object>
                            <packing>
                                <property name="resize">true</property>
                                <property name="shrink">false</property>
                            </packing>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>

